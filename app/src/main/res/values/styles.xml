<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#f00</item>
        <item name="colorPrimaryDark">#0f0</item>
        <item name="colorAccent">#ff0</item>
    </style>


    <style name="Reader" />

    <style name="Reader.ine_single_comic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/line_single_comic</item>

    </style>


    <style name="Reader.Button">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>

        <item name="android:textSize">@dimen/text_size_comic_a</item>
        <item name="android:textColor">@color/text_color_comic_a</item>
    </style>

    <style name="Reader.Button.A" />  <!--UI 规范里面按钮样式一 ok_button_style_comic_a-->

    <style name="Reader.Button.B" /> <!--UI 规范里面按钮样式一 ok_button_style_comic_b-->


    <style name="Reader.Button.C"> <!--UI 规范里面按钮样式一 ok_button_style_comic_c-->
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">@dimen/text_size_comic_b</item>
    </style>


    <style name="Reader.Text" />

    <style name="Reader.Text.size_c_color_a"> <!--  字体样式，包括颜色和大小 -->
        <item name="android:textColor">@color/text_color_comic_a</item>
        <item name="android:textSize">@dimen/text_size_comic_c</item>
    </style>


    <style name="Reader.Text.size_e_color_c">
        <item name="android:textSize">@dimen/text_size_comic_e</item>
        <item name="android:textColor">@color/text_color_comic_c</item>
    </style>

    <style name="Reader.Text.size_c_color_e">
        <item name="android:textSize">@dimen/text_size_comic_c</item>
        <item name="android:textColor">@color/text_color_comic_e</item>
    </style>

    <style name="Reader.Text.size_e_color_a">
        <item name="android:textSize">@dimen/text_size_comic_e</item>
        <item name="android:textColor">@color/text_color_comic_a</item>
    </style>

    <style name="Reader.Text.size_e_color_f">
        <item name="android:textSize">@dimen/text_size_comic_e</item>
        <item name="android:textColor">@color/text_color_comic_f</item>
    </style>
    <style name="Reader.Text.size_h_color_a">
        <item name="android:textSize">@dimen/text_size_comic_h</item>
        <item name="android:textColor">@color/text_color_comic_a</item>
    </style>

    <style name="Reader.Text.size_f_color_a">
        <item name="android:textSize">@dimen/text_size_comic_f</item>
        <item name="android:textColor">@color/text_color_comic_a</item>
    </style>
    <style name="Reader.Text.size_f_color_c">
        <item name="android:textSize">@dimen/text_size_comic_f</item>
        <item name="android:textColor">@color/text_color_comic_c</item>
    </style>
    <style name="Reader.Text.size_f_color_b">
        <item name="android:textSize">@dimen/text_size_comic_f</item>
        <item name="android:textColor">@color/text_color_comic_b</item>
    </style>
<style name="Reader.Text.size_a_color_a">
        <item name="android:textSize">@dimen/text_size_comic_a</item>
        <item name="android:textColor">@color/text_color_comic_a</item>
    </style>

</resources>
